# This is a basic workflow to help you get started with Actions

name: Farmer

# Controls when the workflow will run
on:
#   # Triggers the workflow on push or pull request events but only for the main branch
#   push:
#     branches: [ main ]
#   pull_request:
#     branches: [ main ]

  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest

    steps:
    - uses: actions/checkout@master
      with:
        repository: HackmichNet/SharpAzToken
    
    - name: .Net Build
      uses: EasyDesk/action-dotnet-build@v1.0.0
      with:
#         build-args: 'Release'
#         build-configuration: # optional, default is Release
        path: Farmer/
    
    
    - name: Create Release
      id: create_release
      uses: actions/create-release@v1
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      with:
        tag_name: ${{ github.run_number }}
        release_name: release
        draft: false
        prerelease: false

    - name: Upload Release Asset
      uses: actions/upload-release-asset@v1
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      with:
        upload_url: ${{ steps.create_release.outputs.upload_url }}
        asset_path: SharpAzToken\bin\Release\SharpAzToken.exe
        asset_name: SharpAzToken.exe
        asset_content_type: application/octet-stream
